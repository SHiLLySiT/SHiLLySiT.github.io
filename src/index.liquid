---
title: Who is Alex Larioza?!
layout: root
---

<!-- container -->
<div class="flex justify-center">
  <div class="flex flex-col max-w-7xl items-center p-4 gap-4">

    <!-- bio card -->
    <div class="w-full max-w-full h-auto flex flex-col sm:flex-row">
      <!-- mugshot -->
      <img class="h-full max-h-128 sm:h-96 object-cover rounded-t-lg sm:rounded-t-none sm:rounded-l-lg" src="{{ settings.mugshot }}"/>
      <!-- bio -->
      <div class="w-full border border-t border-gray-200 bg-white rounded-b-lg sm:rounded-b-none sm:rounded-r-lg p-4 flex flex-col justify-between leading-normal">
        <div class="mb-8 px-5">
          <div class="text-gray-900 font-bold mb-2 text-4xl md:text-5xl">{{ settings.name }}</div>
          <p class="text-gray-700 text-base md:text-xl lg:text-2xl">{{ settings.description }}</p>
        </div>
        
        <div class="w-full px-5 flex items-center">
          {% for social in settings.social %}
          <a title="{{ social[0] }}" href="{{ social[2] }}" class="pr-4 text-custom-link hover:text-custom-link-hover">
            <i class="{{ social[1] }} fa-xl"></i>
          </a>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- project cards-->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {%- for project in collections.project reversed -%}
      <!-- card -->
      <a href="{{ project.url }}" class="flex flex-col max-w-96 h-auto rounded-lg overflow-hidden border border-t border-gray-200
        hover:shadow-xl hover:border-gray-100 hover:cursor-pointer group">
        
        <!-- type -->
        <div class="flex justify-center gap-1 bg-gray-200 p-3 h-4 items-center">
          <i class="{{  settings.projectTypes[project.data.type].icon }} fa-xs text-gray-600"></i>
          <p class=" text-gray-500 text-xs font-bold uppercase">
            {{  settings.projectTypes[project.data.type].name }}
          </p>
        </div>

        <!-- image -->
        <img class="aspect-[90/65] transition-opacity group-hover:opacity-60" src="{{ project.data.cover }}">
        
        <!-- info -->
        <div class="flex p-2 pl-3 gap-3 items-center">
          <div class="">
            <div class="text-xl">{{project.data.title}}</div>
            <div class="flex gap-4">
              <p class="text-gray-700 text-sm">
                {{ project.date | formatDate: "MMMM YYYY" }}
              </p>
              <div class="flex gap-1">
                <div class="flex items-center">
                  <img class="w-4 h-4" src="{{ settings.companies[project.data.company].icon }}"/>
                </div>
                <p class="text-gray-700 text-sm">
                  {{ settings.companies[project.data.company].name }}
                </p>
              </div>
            </div>
          </div>
        </div>
      </a>
    {%- endfor -%}
    </div>

  </div>
</div>
