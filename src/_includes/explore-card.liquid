<div class="w-full flex flex-col border border-gray-200 rounded-lg gap-1 p-4">
  {% if title %}
  <h2 class="font-bold mb-2 text-2xl md:text-3xl">{{ title }}</h1>
  {% endif %}
  <div class="flex flex-wrap gap-2 md:gap-4">
    {% if showHome %}
      <a href="/" class="md:gap-1 flex flex-row items-center text-custom-link hover:text-custom-link-hover">
        <div class="flex flex-row justify-center w-8">
          <i class="fa-solid fa-home fa-md md:scale-150"></i>
        </div>
        <p>Home</p>
      </a>
    {% endif %}
    {% for type in settings.projectTypes %}  
      <a href="/tags/{{ type[0] }}" class="md:gap-1 flex flex-row items-center text-custom-link hover:text-custom-link-hover">
        <div class="flex flex-row justify-center w-8">
          <i class="{{ type[1].icon }} fa-md md:scale-150"></i>
        </div>
        <p>{{ type[1].name }}</p>
      </a>
    {% endfor %}
  </div>
  </ul>
</div>