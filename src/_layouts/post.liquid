---
layout: main
---
<div class="pt-4 flex space-x-4 justify-center">
  <div class="w-160 flex flex-col">
    <header>
      <h1 class="text-custom-white text-2xl sm:text-3xl leading-9 font-black align-middle uppercase">
        {{ title }}
      </h1>

      <div class="font-thin italic">
        {{ page.date | formatDate: "MMMM DD YYYY" }}
      </div>
    </header>

    <main class="
      pt-4
      prose text-custom-white prose-sm sm:prose-base
      prose-headings:text-custom-white prose-strong:text-custom-white 
      prose-code:text-gray-400 prose-code:font-mono prose-code:bg-gray-800 prose-code:font-thin prose-code:before:hidden prose-code:after:hidden
      prose-pre:text-base
      prose-tr:divide-x prose-tr:border-gray-500
      prose-blockquote:text-custom-white prose-blockquote:font-mono
      prose-a:text-custom-link prose-a:font-bold prose-a:no-underline hover:prose-a:bg-gray-800
    ">
      {{ content }}
    </main>

    <footer class="mt-8 flex gap-2">
      <div class="text-lg font-black uppercase">tags</div>
      {%- for tag in tags -%}
        {% if tag == "post" %}
          {% continue %}
        {% endif %}

        <a class="font-black text-custom-link hover:bg-gray-800" href="/tags/{{ tag }}">{{ tag }}</a>
      {%- endfor -%}
    </footer>
  </div>
</div>

